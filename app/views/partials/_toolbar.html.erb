	</div>

	<div><div class="spacer"></div></div>

	<div>
		<div class="itemD" onclick="Left()"><%= fa_icon "align-left"%></div>
		<div class="itemD" onclick="Center()"><%= fa_icon "align-center"%></div>
		<div class="itemD" onclick="Right()"><%= fa_icon "align-right"%></div>		
	</div>
	
	<div><div class="spacer"></div></div>

	<div class="customSelect">
		<select type="none" id="droped" onchange='action2do($( "#droped option:selected" ))'>
			<option class="itemDD" data-todo="SetSize" data-value="1">Uno</option>
			<option class="itemDD" data-todo="SetSize" data-value="2">Dos</option>
			<option class="itemDD" data-todo="SetSize" data-value="3">Tres</option>
