<script type="text/javascript">
	function action2do (s) {
		var f="";
		f=$(s).data("todo");
		f+="("+$(s).data("value")+")";
		eval(f);
	}
</script>
<nav class="toolbar">
	<div>
		<div class="itemD" onclick="undo()"><%= fa_icon "undo"%></div>
		<div class="itemD" onclick="redo()"><%= fa_icon "repeat"%></div>
	</div>
	
	<div><div class="spacer"></div></div>

	<div>
		<div class="itemD" onclick="iBold()"><%= fa_icon "bold"%></div>
		<div class="itemD" onclick="iItalic()"><%= fa_icon "italic"%></div>
