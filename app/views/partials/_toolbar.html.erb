	<div>
		<div class="itemD" onclick="iOrderedList()"><%= fa_icon "list-ol"%></div>
		<div class="itemD" onclick="iUnorderedList()"><%= fa_icon "list-ul"%></div>
	</div>
	
		<div><div class="spacer"></div></div>

	<div>
		<div class="itemD" onclick="iLink()"><%= fa_icon "chain"%></div>
		<div class="itemD" onclick="iUnLink()"><%= fa_icon "unlink"%></div>
	</div>

	<div><div class="spacer"></div></div>

	<div>
		<div class="itemD" onclick="iImage()"><%= fa_icon "camera-retro"%></div>
	</div>

	<div><div class="spacer"></div></div>

	<div>
		<div class="itemD" onclick="createTable()"><%= fa_icon "table"%></div>
